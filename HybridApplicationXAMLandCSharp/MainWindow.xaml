<Window x:Class="HybridApplicationXAMLandCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HybridApplicationXAMLandCSharp"
        mc:Ignorable="d"
        Title="Гибридная инициализация элементов управления" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Статический заголовок-->
        <TextBlock HorizontalAlignment="Center" Margin="10" Grid.Row="0" 
                   Text="Динамические элементы управления" 
                   FontSize="16" FontWeight="Bold" Padding="10" Background="LightBlue" />
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="DynamicContentPanel" Margin="10"/>
        </ScrollViewer>
        <Border Grid.Row="2" Background="LightGray" Padding="5">
            <TextBlock HorizontalAlignment="Center" Text="Элементы созданы програмно" />
        </Border>
    </Grid>
</Window>
